{
  "aggs": {
    "avg": {
      "avg": {
        "field": "responseTime"
      }
    }
  },
  "size": 0,
  "query": {
    "bool": {
      "must": [
        {
          "term": {
            "packageNm": #{packageNm}
          }
        },
        {
          "term": {
            "serverType": #{serverType}
          }
        },
        #[isOsType]
        {
          "term": {
            "osType": #{osType}
          }
        },
        #[/isOsType]
        {
          "range": {
            "pageStartTm": {
              "gte": #{pageStartTm},
              "lte": #{pageEndTm}
            }
          }
        }
      ]
    }
  }
}