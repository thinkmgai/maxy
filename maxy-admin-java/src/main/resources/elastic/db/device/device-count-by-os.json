{
  "aggs": {
    "count": {
      "terms": {
        "field": "deviceModel",
        "size": 9999
      },
      "aggs": {
        "userCount": {
          "cardinality": {
            "field": "deviceId.raw"
          }
        },
        "order_by_userCount": {
          "bucket_sort": {
            "sort": [
              {"userCount.value": {"order": "desc"}}
            ]
          }
        }
      }
    }
  },
  "size": 0,
  "query": {
    "bool": {
      "filter": [
        {
          "term": {
            "packageNm": #{packageNm}
          }
        },
        {
          "term": {
            "serverType": #{serverType}
          }
        },
        {
          "term": {
            "osType": #{osType}
          }
        },
        {
          "range": {
            "logTm": {
              "from": #{fromTimestamp},
              "to": #{to},
              "include_lower": true,
              "include_upper": true,
              "time_zone": "Z"
            }
          }
        }
      ]
    }
  }
}