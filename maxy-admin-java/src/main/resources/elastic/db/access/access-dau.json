{
  "aggs": {
    "res": {
      "date_histogram": {
        "field": "appStartTm",
        "calendar_interval": #{calendarInterval},
        "time_zone": "Asia/Seoul",
        "min_doc_count": 1
      },
      "aggs": {
        "count": {
          "cardinality": {
            "field": "deviceId.raw"
          }
        }
      }
    },
    "avg_count": {
      "avg_bucket": {
        "buckets_path": "res>count"
      }
    }
  },
  "size": 0,
  "query": {
    "bool": {
      "filter": [
        {
          "term": {
            "packageNm": #{packageNm}
          }
        },
        {
          "term": {
            "serverType": #{serverType}
          }
        },
        #[isOsType]
        {
          "term": {
            "osType": #{osType}
          }
        },
        #[/isOsType]
        {
          "range": {
            "appStartTm": {
              "from": #{fromTimestamp},
              "to": #{toTimestamp},
              "include_lower": true,
              "include_upper": true,
              "time_zone": "Z"
            }
          }
        }
      ]
    }
  }
}