{
  "size": 1,
  "query": {
    "bool": {
      "filter": [
        {
          "term": {
            "packageNm": #{packageNm}
          }
        },
        {
          "term": {
            "serverType": #{serverType}
          }
        },

        #[isDeviceId]
        {
          "term": {
            "deviceId": #{deviceId}
          }
        },
        #[/isDeviceId]

        #[isOsType]
        {
          "term": {
            "osType": #{osType}
          }
        },
        #[/isOsType]
        {
          "range": {
            "logTm": {
              "from": #{from},
              "to": #{from},
              "include_lower": true,
              "include_upper": true,
              "time_zone": "Z"
            }
          }
        }
      ]
    }
  },
  "sort": [
    {
      "logTm": {
        "order": "desc"
      }
    }
  ]
  #[isCrash]
  ,
  "_source": {
    "exclude": [
      "contents"
    ]
  }
  #[/isCrash]
}