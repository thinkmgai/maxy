{
  "aggs": {
    "PV": {
      "date_histogram": {
        "field": "logDate",
        "interval": "1d",
        "time_zone": "Asia/Seoul"
      },
      "aggs": {
        "user": {
          "cardinality": {
            "field": "deviceId.raw"
          }
        },
        "responseTime": {
          "avg": {
            "field": "responseTime"
          }
        },
        "renderingTime": {
          "avg": {
            "field": "loadingTime"
          }
        },
        "CPU": {
          "avg": {
            "field": "avgCpuUsage"
          }
        },
        "MEM": {
          "avg": {
            "field": "avgMemUsage"
          }
        },
        "Error": {
          "sum": {
            "field": "errorCount"
          }
        },
        "Crash": {
          "sum": {
            "field": "crashCount"
          }
        }
      }
    }
  },
  "size": 0,
  "query": {
    "bool": {
      "must": [
        {
          "term": {
            "packageNm": #{packageNm}
          }
        },
        {
          "term": {
            "serverType": #{serverType}
          }
        },
        #[isOsType]
        {
          "term": {
            "osType": #{osType}
          }
        },
        #[/isOsType]
        {
          "range": {
            "logDate": {
              "gte": #{fromTimestamp},
              "lte": #{toTimestamp}
            }
          }
        }
      ]
    }
  }
}