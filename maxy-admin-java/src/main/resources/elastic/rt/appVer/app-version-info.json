{
  "aggs": {
    "PV": {
      "date_histogram": {
        "field": "logDate",
        "interval": "1d",
        "time_zone": "Asia/Seoul"
      },
      "aggs": {
        "osType": {
          "terms": {
            "field": "osType",
            "size": 10
          },
          "aggs": {
            "appVer": {
              "terms": {
                "field": "appVer",
                "size": 9999
              },
              "aggs": {
                "user": {
                  "cardinality": {
                    "field": "deviceId.raw"
                  }
                },
                "responseTime": {
                  "avg": {
                    "field": "responseTime"
                  }
                },
                "renderingTime": {
                  "avg": {
                    "field": "loadingTime"
                  }
                },
                "CPU": {
                  "avg": {
                    "field": "avgCpuUsage"
                  }
                },
                "MEM": {
                  "avg": {
                    "field": "avgMemUsage"
                  }
                },
                "Error": {
                  "sum": {
                    "field": "errorCount"
                  }
                },
                "Crash": {
                  "sum": {
                    "field": "crashCount"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "size": 0,
  "query": {
    "bool": {
      "must": [
        {
          "term": {
            "packageNm": #{packageNm}
          }
        },
        {
          "term": {
            "serverType": #{serverType}
          }
        },
        #[isOsType]
        {
          "term": {
            "osType": #{osType}
          }
        },
        #[/isOsType]
        #[isAppVer]
        {
          "term": {
            "appVer": #{appVer}
          }
        },
        #[/isAppVer]
        {
          "range": {
            "logDate": {
              "gte": #{fromTimestamp},
              "lte": #{toTimestamp}
            }
          }
        }
      ]
    }
  }
}