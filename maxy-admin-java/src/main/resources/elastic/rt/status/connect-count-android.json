{
  "aggs": {
    "androidConnectCount": {
      "date_histogram": {
        "field": "appStartTm",
        "interval": "1d",
        "time_zone": "Asia/Seoul",
        "format": "yyyy-MM-dd",
        "extended_bounds": {
          "min": #{fromDt},
          "max": #{toDt}
        }
      },
      "aggs": {
       "count": {
          "cardinality": {
            "field": "deviceId.raw"
          }
        }
      }
    }
  },
  "query": {
    "bool": {
      "filter": [
        {
          "term": {
            "packageNm": #{packageNm}
          }
        },
        {
          "term": {
            "serverType": #{serverType}
          }
        },
        #[isAppver]
        {
          "term": {
            "appVer": #{appVer}
          }
        },
        #[/isAppVer]
        {
          "range": {
            "appStartTm": {
              "from": #{fromTimestamp},
              "to": #{toTimestamp},
              "include_lower": true,
              "include_upper": true,
              "time_zone": "Z"
            }
          }
        },
        {
          "term": {
            "osType": "Android"
          }
        }
      ]
    }
  }
}