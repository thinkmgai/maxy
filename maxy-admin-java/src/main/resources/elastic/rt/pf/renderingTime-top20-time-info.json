{
  "aggs": {
    "top_deviceModels": {
      "terms": {
        "field": "deviceModel",
        "size": 20,
        "order": {
          "max_renderingTime": "desc"
        }
      },
      "aggs": {
        "max_renderingTime": {
          "max": {
            "field": "loadingTime"
          }
        },
        "time": {
          "percentiles": {
            "field": "loadingTime",
            "percents": [#{percent}]
          }
        }
      }
    }
  },
  "size": 0,
  "query": {
    "bool": {
      "must": [
        {
          "term": {
            "packageNm": #{packageNm}
          }
        },
        {
          "term": {
            "serverType": #{serverType}
          }
        },
        {
          "term": {
            "deviceModel": #{deviceModel}
          }
        },
        #[isAppVer]
        {
          "term": {
            "appVer": #{appVer}
          }
        },
        #[/isAppVer]
        {
          "range": {
            "logDate": {
              "gte": #{fromTimestamp},
              "lte": #{toTimestamp}
            }
          }
        }
      ]
    }
  }
}