{
  "aggs": {
    "avgTime": {
      "avg": {
        "field": "responseTime"
      }
    }
  },
  "size": 0,
  "query": {
    "bool": {
      "must": [
        {
          "term": {
            "packageNm": #{packageNm}
          }
        },
        {
          "term": {
            "serverType": #{serverType}
          }
        },
        {
          "term": {
            "deviceModel": #{deviceModel}
          }
        },
        #[isAppVer]
        {
          "term": {
            "appVer": #{appVer}
          }
        },
        #[/isAppVer]
        {
          "range": {
            "logDate": {
              "gte": #{fromTimestamp},
              "lte": #{toTimestamp}
            }
          }
        },
        {
          "range": {
            "responseTime": {
              "gte": #{time}
            }
          }
        }
      ]
    }
  }
}