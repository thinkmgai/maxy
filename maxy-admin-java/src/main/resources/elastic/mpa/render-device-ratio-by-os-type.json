{
  "aggs": {
    "deviceRatio": {
      "terms": {
        "field": "deviceModel",
        "size": 9999
      },
      "aggs": {
        "avg_percentile": {
          "percentiles": {
            "field": "loadingTime",
            "percents": [50]
          }
        },
        "avg": {
          "bucket_script": {
            "buckets_path": {
              "value": "avg_percentile[50.0]"
            },
            "script": "params.value"
          }
        }
      }
    }
  },
  "query": {
    "bool": {
      "filter": [
        {
          "term": {
            "packageNm": {
              "value": #{packageNm}
            }
          }
        },
        {
          "term": {
            "serverType": {
              "value": #{serverType}
            }
          }
        },
        {
          "term": {
            "osType": {
              "value": #{osType}
            }
          }
        },
        #[isAppVer]
        {
          "term": {
            "appVer": #{appVer}
          }
        },
        #[/isAppVer]
        #[searchDeviceId]
        {
          "term": {
            "deviceId.raw": #{searchValue}
          }
        },
        #[/searchDeviceId]
        #[searchUserNm]
        {
          "term": {
            "userNm.raw": #{searchValue}
          }
        },
        #[/searchUserNm]
        #[searchUserId]
        {
          "term": {
            "userId.raw": #{searchValue}
          }
        },
        #[/searchUserId]
        {
          "range": {
            "pageEndTm": {
              "gte": #{from},
              "lte": #{to},
              "time_zone": "Z"
            }
          }
        }
      ]
    }
  }
}